#Header path
#-------------------------------------------------------------------------------
INCLUDES += inc
INCLUDES += src
INCLUDES += src/driver
#-------------------------------------------------------------------------------

#Source files
#-------------------------------------------------------------------------------
SRC += \
	src \
	src/driver

SRC_C += $(wildcard  $(addsuffix /*.c, $(SRC)))
SRC_S += $(wildcard  $(addsuffix /*.s, $(SRC)))
#-------------------------------------------------------------------------------

OBJ_DIR	= out

#Obj file list
#-------------------------------------------------------------------------------
OBJS += $(patsubst %.c, %.o, $(addprefix $(OBJ_DIR)/, $(SRC_C)))
OBJS += $(patsubst %.s, %.o, $(addprefix $(OBJ_DIR)/, $(SRC_S)))
#-------------------------------------------------------------------------------